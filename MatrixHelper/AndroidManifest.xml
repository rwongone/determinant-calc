<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matrixhelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.matrixhelper.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.matrixhelper.EnterMatrix"
            android:label="@string/title_activity_enter_matrix"
            android:parentActivityName="com.example.matrixhelper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matrixhelper.MainActivity" />
        </activity>
        <activity
            android:name="com.example.matrixhelper.InputValues"
            android:label="@string/title_activity_input_values"
            android:parentActivityName="com.example.matrixhelper.EnterMatrix" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matrixhelper.EnterMatrix" />
        </activity>
    </application>

</manifest>
